.list-group-item.nested-2.field-data{data: {id: subcategory.id}}
  %div= subcategory.display_name(I18n.locale)
  .actions
    %span.handle-move{'aria-hidden' => true}
    - if !subcategory.can_destroy?
    - elsif subcategory.remove_needs_caution?
      = link_to remove_popup_admin2_listings_category_path(subcategory), remote: true do
        %span.remove
    - else
      = link_to admin2_listings_category_path(subcategory), method: :delete, data: {confirm: t("admin2.categories.remove_category_confirmation", {category_name: subcategory.display_name(I18n.locale)})} do
        %span.remove
    = link_to edit_admin2_listings_category_path(subcategory), remote: true do
      %span.edit
