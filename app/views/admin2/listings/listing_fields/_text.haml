    %label.form-check-label{:for => "listingFieldsTextCategory2"} Category x.b
  .form-check
    %input#listingFieldsTextCategory3.form-check-input{:checked => "checked", :type => "checkbox"}/
    %label.form-check-label{:for => "listingFieldsTextCategory3"} Category x.c
  .form-check
