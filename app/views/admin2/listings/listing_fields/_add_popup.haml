#listingFieldsAddModal.modal{"aria-hidden" => "true", "aria-labelledby" => "listingFieldsModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog.modal-lg{:role => "document"}
    .modal-content
      %form.content-card-section-form
        .modal-header
          %h2#listingFieldsAddModalLabel.modal-title Add a new listing field
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
        .modal-body
          .form-group
            %label{:for => "newListingFieldType"} New listing field type
            %select#newListingFieldType.form-control{"aria-describedby" => "newListingFieldType"}
              %option{:disabled => "disabled", :selected => "selected"} Select a field type...
              %option Text
              %option Number
              %option Dropdown
              %option Checkbox group
              %option Date
        .modal-footer
          %a.cancel-modal{"data-dismiss" => "modal", :href => "#"} Cancel
          %button.btn.btn-primary{:type => "button"} Save changes
