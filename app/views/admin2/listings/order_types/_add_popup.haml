  .modal-dialog.modal-lg{:role => "document"}
    .modal-content
      %form#listing_shape_form.content-card-section-form
        .modal-header
          %h2#orderTypesEditModalLabel.modal-title Add a new order type
          %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
            %span{"aria-hidden" => "true"} Ã—
        .modal-body
          .form-group
            %label{:for => "newOrderTypeTemplate"} New order type template
            = select_tag :template_order_type, options_for_select([[t("admin.listing_shapes.index.select_template"), nil]].concat(templates.map { |(label_tr_key, template_name)| [t(label_tr_key), template_name]})), class: %i[form-control], data: {url: new_admin2_listings_order_type_path}
          %span#category-body
        .modal-footer
          %a.cancel-modal{"data-dismiss" => "modal", :href => "#"} Cancel
          %button.btn.btn-primary{:type => "button"} Save changes
