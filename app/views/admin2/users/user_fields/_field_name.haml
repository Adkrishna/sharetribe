.form-group
  = form.label :name_attributes, t("admin.custom_fields.index.field_title")
  .multiple-languages-container
    - available_locales.each do |locale_name, locale_value|
      .multiple-languages-language
        %span.language= locale_name
      .multiple-languages-input
        = text_field_tag "custom_field[name_attributes][#{locale_value}]", form.object.name(locale_value), class: %i[form-control required]
