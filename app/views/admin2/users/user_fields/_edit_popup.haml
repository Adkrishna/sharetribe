#userFieldsEditModal.modal{'aria-hidden' => true, 'aria-labelledby' => 'userFieldsEditModalLabel', role: :dialog, tabindex: '-1'}
  .modal-dialog.modal-lg{role: :document}
    .modal-content
      .content-card-section-form
        .modal-header
          %h2#userFieldsEditModalLabel.modal-title
            Edit user field: $USER_FIELD_NAME (number)
            -# = t('admin2.listing_fields.edit_field_type', name: custom_field.name(I18n.locale), field_type: field_type_translation(custom_field.type).downcase)
          %button.close{'aria-label' => 'Close', 'data-dismiss' => :modal, type: :button}
            %span{'aria-hidden' => true} Ã—
        .modal-body
          = render 'admin2/users/user_fields/form', service: service, id: :submit_edit_user_field
        .modal-footer
          = link_to t('admin2.cancel'), '#', class: %i[cancel-modal], 'data-dismiss': :modal
          = button_tag t('admin2.save_changes'), class: %i[btn btn-primary], onclick: "document.getElementById('submit_edit_user_field').submit();"
