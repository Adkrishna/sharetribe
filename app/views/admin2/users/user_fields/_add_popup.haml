#userFieldsAddModal.modal{'aria-hidden' => true, 'aria-labelledby' => 'userFieldsAddModalLabel', role: :dialog, tabindex: '-1'}
  .modal-dialog.modal-lg{role: :document}
    .modal-content
      .content-card-section-form
        .modal-header
          %h2#userFieldsAddModalLabel.modal-title
            Add a new user field
          %button.close{'aria-label' => 'Close', 'data-dismiss' => :modal, type: :button}
            %span{'aria-hidden' => true} Ã—
        .modal-body
          .form-group
            = label_tag :field_type, 'New user field type'
            = select_tag :field_type, options_for_select(custom_field_dropdown_options(CustomField::VALID_TYPES)), class: %i[form-control], data: {url: new_admin2_users_user_field_path}
          #body_type
        .modal-footer{style: 'display:none'}
          = link_to t('admin2.cancel'), '#', class: %i[cancel-modal], 'data-dismiss': :modal
          = button_tag t('admin2.save_changes'), class: %i[btn btn-primary], onclick: "document.getElementById('submit_new_user_field').submit();"
